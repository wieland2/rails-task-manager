<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed == true %>
<p><%="The task has been completed" %></p>
<% else %>
<p> <%="The task has not been completed"%></p>
<% end %>


<%= link_to "Return to List",tasks_path(@task) %>

<%= link_to "Edit", edit_task_path(@task) %>


<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
